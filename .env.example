# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef

# Development
REACT_APP_ENV=development
REACT_APP_VERSION=0.1.0

# Platform Detection
REACT_APP_PLATFORM=web

# Update Configuration
REACT_APP_GITHUB_REPO=tu-usuario/tu-repo
REACT_APP_SIMULATE_UPDATE=false

# NOTA: REACT_APP_UPDATE_CHECK_INTERVAL ya no se usa
# Las verificaciones ahora son:
# - Una vez al abrir la aplicaci√≥n
# - Solo cuando el usuario presiona "Comprobar actualizaciones"

# GitHub Token (opcional - aumenta rate limit de 60 a 5000 solicitudes/hora)
# Crear en: https://github.com/settings/tokens (solo necesita scope 'public_repo')
# REACT_APP_GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx